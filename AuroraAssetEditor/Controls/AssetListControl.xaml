<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="AuroraAssetEditor.Controls.AssetListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filters -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <GroupBox Header="Filter on title" Grid.Column="0" Margin="5,0,5,5">
                <TextBox x:Name="TitleFilterBox" TextChanged="TitleFilterChanged"/>
            </GroupBox>
            <GroupBox Header="Filter on titleId" Grid.Column="1" Margin="5,0,5,5">
                <TextBox x:Name="TitleIdFilterBox" TextChanged="TitleIdFilterChanged"/>
            </GroupBox>
        </Grid>

        <!-- ListView -->
        <Grid Grid.Row="1">
            <ListView x:Name="ItemListView"
                    BorderThickness="1"
                    FontSize="10"
                    BorderBrush="Gray" 
                    Margin="5"
                    SelectionChanged="ItemListView_SelectionChanged">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="{Binding BackgroundColor}"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Title Name" DisplayMemberBinding="{Binding GameName}">
                            <GridViewColumn.HeaderContainerStyle>
                                <Style TargetType="GridViewColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <EventSetter Event="Click" Handler="GridViewColumnHeader_Click"/>
                                </Style>
                            </GridViewColumn.HeaderContainerStyle>
                        </GridViewColumn>
                        <GridViewColumn Header="TitleID" DisplayMemberBinding="{Binding TitleId}">
                            <GridViewColumn.HeaderContainerStyle>
                                <Style TargetType="GridViewColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <EventSetter Event="Click" Handler="GridViewColumnHeader_Click"/>
                                </Style>
                            </GridViewColumn.HeaderContainerStyle>
                        </GridViewColumn>
                        <GridViewColumn Header="Assets" Width="40" DisplayMemberBinding="{Binding Assets}">
                            <GridViewColumn.HeaderContainerStyle>
                                <Style TargetType="GridViewColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </GridViewColumn.HeaderContainerStyle>
                        </GridViewColumn>
                        <GridViewColumn Header="Boxart" Width="40" DisplayMemberBinding="{Binding Boxart}">
                            <GridViewColumn.HeaderContainerStyle>
                                <Style TargetType="GridViewColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </GridViewColumn.HeaderContainerStyle>
                        </GridViewColumn>
                        <GridViewColumn Header="Back" Width="40" DisplayMemberBinding="{Binding Back}">
                            <GridViewColumn.HeaderContainerStyle>
                                <Style TargetType="GridViewColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </GridViewColumn.HeaderContainerStyle>
                        </GridViewColumn>
                        <GridViewColumn Header="Banner" Width="40" DisplayMemberBinding="{Binding Banner}">
                            <GridViewColumn.HeaderContainerStyle>
                                <Style TargetType="GridViewColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </GridViewColumn.HeaderContainerStyle>
                        </GridViewColumn>
                        <GridViewColumn Header="Icon" Width="40" DisplayMemberBinding="{Binding Icon}">
                            <GridViewColumn.HeaderContainerStyle>
                                <Style TargetType="GridViewColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </GridViewColumn.HeaderContainerStyle>
                        </GridViewColumn>
                        <GridViewColumn Header="Screens" Width="40" DisplayMemberBinding="{Binding Screens}">
                            <GridViewColumn.HeaderContainerStyle>
                                <Style TargetType="GridViewColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </GridViewColumn.HeaderContainerStyle>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Busy Indicator -->
            <Border x:Name="BusyIndicator" 
                   Background="#80000000" 
                   Visibility="Collapsed">
                <StackPanel HorizontalAlignment="Center" 
                          VerticalAlignment="Center">
                    <TextBlock Text="Loading..." 
                             Foreground="White" 
                             FontSize="16" 
                             Margin="0,0,0,10"/>
                    <ProgressBar IsIndeterminate="True" 
                               Width="200" 
                               Height="2"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl> 