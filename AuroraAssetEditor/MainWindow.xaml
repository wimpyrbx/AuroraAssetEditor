<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AuroraAssetEditor.Helpers"
        xmlns:controls="clr-namespace:AuroraAssetEditor.Controls"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="AuroraAssetEditor.MainWindow"
        Title="Aurora Asset Editor v{0}.{1}.{2} by Swizzy thanks to MaesterRowen"
        Width="1422"
        Height="600"
        MinWidth="1280"
        MinHeight="600">

    <!-- Main Grid container -->
    <Grid>
        <!-- Content Grid -->
        <Grid Panel.ZIndex="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- For FTP Assets -->
                <ColumnDefinition Width="*"/>
                <!-- For Image Preview -->
                <ColumnDefinition Width="*"/>
                <!-- For Local Assets -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Menu -->
            <Menu Grid.ColumnSpan="3"
                  VerticalAlignment="Center"
                  Background="White"
                  Height="18">
                <MenuItem Header="File">
                    <MenuItem Click="CreateNewOnClick" Header="Create New Asset File" />
                    <MenuItem Click="LoadAssetOnClick" Header="Load Asset File" />
                    <Separator />
                    <MenuItem Click="ExitOnClick" Header="Exit" />
                </MenuItem>
                <MenuItem x:Name="SettingsMenu" Header="Settings">
                    <MenuItem x:Name="AutoResizeImages"
                              Header="Auto Resize Images"
                              IsCheckable="True"
                              IsChecked="True" />
                    <MenuItem x:Name="UseCompression"
                              Header="Use Compression"
                              IsCheckable="True"
                              IsChecked="True" />
                </MenuItem>
                <MenuItem x:Name="EditMenu"
                          Header="Edit"
                          SubmenuOpened="EditMenuOpened" />
                <MenuItem x:Name="GameSelector"
                          Visibility="Hidden"
                          Margin="100,0,0,0">
                    <MenuItem x:Name="GameTitleIdMenu"
                              Click="CopyTitleIdToClipboard_Click"
                              ToolTip="Copies the TitleId to the clipboard"/>
                    <MenuItem x:Name="GameDbIdMenu"
                              Click="CopyDbIdToClipboard_Click"
                              ToolTip="Copies the DatabaseID to the clipboard"/>
                    <MenuItem Header="Unselect current game"
                              Click="ClearCurrentGame_Click"
                              ToolTip="Clear Selection"/>
                </MenuItem>
                <MenuItem Header="Debug" Click="MenuItem_Click">
                    <MenuItem Header="Test Coloring" Click="TestColoring_Click"/>
                </MenuItem>
            </Menu>

            <!-- FTP Assets Column -->
            <ContentControl x:Name="FtpAssetsContainer" 
                          Grid.Row="1" 
                          Grid.Column="0"/>

            <!-- Image Preview Column -->
            <Grid Grid.Row="1" Grid.Column="1" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Assets -->
                <Grid Grid.Row="0" Grid.Column="0" Background="#FFADADAD" Margin="5,5,5,5" Height="100">
                    <Image x:Name="local_boxart" Stretch="Fill" Margin="5"/>
                </Grid>
                <Grid Grid.Row="0" Grid.Column="1" Background="#FFADADAD" Margin="5,5,5,5" Height="100">
                    <Image x:Name="local_background" Stretch="Fill" Margin="5"/>
                </Grid>
                <Grid Grid.Row="0" Grid.Column="2" Background="#FFADADAD" Margin="10,5,0,5" Height="100" HorizontalAlignment="Left" Width="170" Grid.ColumnSpan="2">
                    <Image x:Name="local_banner" Stretch="Fill" Margin="5"/>
                </Grid>
                <Grid Grid.Row="0" Grid.Column="4" Background="#FFADADAD" Margin="5,5,5,5" Height="100">
                    <Image x:Name="local_icon" Stretch="Fill" Margin="5"/>
                </Grid>

                <!-- Screenshots -->
                <Grid Grid.Row="1" Grid.Column="0" Background="#FFADADAD" Margin="5,5,5,5" Height="60">
                    <Image x:Name="local_screenshot1" Stretch="Fill" Margin="5"/>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="1" Background="#FFADADAD" Margin="5,5,5,5" Height="60">
                    <Image x:Name="local_screenshot2" Stretch="Fill" Margin="5"/>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="2" Background="#FFADADAD" Margin="5,5,5,5" Height="60">
                    <Image x:Name="local_screenshot3" Stretch="Fill" Margin="5"/>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="3" Background="#FFADADAD" Margin="5,5,5,5" Height="60">
                    <Image x:Name="local_screenshot4" Stretch="Fill" Margin="5"/>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="4" Background="#FFADADAD" Margin="5,5,5,5" Height="60">
                    <Image x:Name="local_screenshot5" Stretch="Fill" Margin="5"/>
                </Grid>

                <!-- Test Asset List Control -->
            </Grid>

            <!-- Local Assets Column -->
            <GroupBox Header="Local Assets" 
                      BorderBrush="Black" 
                      Grid.Row="1"
                      Grid.Column="2"
                      Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="AssetPathTextBox" 
                        FontSize="10"
                        Padding="5,2,5,0"
                        Grid.Column="0"
                        Margin="5"/>

                    <Button Content="Load Assets" 
                        x:Name="LoadAssetsButton" 
                        Click="LoadAssetsButton_Click"
                        FontSize="10"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Padding="10,5"
                        Margin="0,5,5,5"/>

                    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                        <controls:AssetListControl x:Name="LocalAssetList"
                                                 SelectionChanged="FolderListView_SelectionChanged"
                                                 Margin="5"/>

                        <Border x:Name="ListViewBusyIndicator" 
                               Background="#80000000" 
                               Visibility="Collapsed">
                            <StackPanel HorizontalAlignment="Center" 
                                      VerticalAlignment="Center">
                                <TextBlock Text="Loading Assets..." 
                                         Foreground="White" 
                                         FontSize="16" 
                                         Margin="0,0,0,10"/>
                                <ProgressBar IsIndeterminate="True" 
                                           Width="200" 
                                           Height="2"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Overlay Grid -->
        <Grid x:Name="LocalAssets"
              Grid.ColumnSpan="3"
              Visibility="Collapsed"
              Panel.ZIndex="1">
            <Grid.Background>
                <SolidColorBrush Opacity="0.7" Color="DimGray" />
            </Grid.Background>
            <Border BorderBrush="Gray" 
                    BorderThickness="1" 
                    Background="WhiteSmoke" 
                    Padding="10">
                <Grid MinWidth="300"
                      MinHeight="300"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <ProgressBar x:Name="GlobalBusyIndicator" 
                               Grid.RowSpan="4"
                               Visibility="Collapsed"
                               IsIndeterminate="True"
                               Height="10"
                               VerticalAlignment="Bottom"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
